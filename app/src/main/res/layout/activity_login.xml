<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/colorPrimaryLight"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="-150dp"
        android:translationZ="80dp"
        android:src="@drawable/ic_tupperware"
        android:layout_height="70dp" />

    <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/da"
           android:layout_centerInParent="true"
           android:background="#ffffff"
           android:layout_width="300dp"
            android:paddingRight="30dp"
             android:paddingLeft="30dp"
           android:layout_height="300dp">

        <RelativeLayout
            android:id="@+id/wq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/circle"></RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number"
            android:layout_marginTop="40dp"
            android:layout_below="@id/wq"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:errorEnabled="true"
            app:boxBackgroundColor="@color/backgroundColor"
            app:counterMaxLength="10"
            android:hint="10 digit number"
            android:textColorHint="@color/colorPrimaryDark"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:boxBackgroundMode="outline"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorSecondaryText"
                android:maxLength="10"
                android:inputType="number"

                android:textSize="14dp"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="match_parent"
            android:text="LOGIN"
            android:textSize="20dp"
            android:letterSpacing="1"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/number"
            android:background="@drawable/button_background"
            android:layout_height="60dp" />

    </RelativeLayout>



</FrameLayout>